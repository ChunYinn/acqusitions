{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "incremental": true,
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "#configs/*": ["config/*"],
      "#controllers/*": ["controllers/*"],
      "#models/*": ["models/*"],
      "#routes/*": ["routes/*"],
      "#middleware/*": ["middleware/*"],
      "#utils/*": ["utils/*"],
      "#validations/*": ["validations/*"],
      "#services/*": ["services/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
